<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonQuick"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button_corner"
            android:layout_marginStart="294dp"
            android:layout_marginLeft="294dp"
            android:text="快速消毒"
            android:textSize="25sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/buttonBroad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonBroad" />

        <Button
            android:id="@+id/buttonBroad"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="177dp"
            android:layout_marginEnd="294dp"
            android:layout_marginRight="294dp"
            android:background="@drawable/button_corner"
            android:text="广谱消毒"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonProfession"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button_corner"
            android:text="专业消毒"
            android:textSize="25sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSetting"
            app:layout_constraintStart_toStartOf="@+id/buttonQuick"
            app:layout_constraintTop_toTopOf="@+id/buttonSetting" />

        <Button
            android:id="@+id/buttonSetting"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button_corner"
            android:layout_marginTop="69dp"
            android:text="其他设置"
            android:textSize="25sp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="@+id/buttonBroad"
            app:layout_constraintTop_toBottomOf="@+id/buttonBroad" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
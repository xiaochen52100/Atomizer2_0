<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/broad_disinfection_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#062333"
    tools:ignore="MissingDefaultResource">

    <com.example.atomizer2_0.DashboardView
        android:id="@+id/dashboard_view_level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginLeft="175dp"
        android:layout_marginBottom="150dp"
        app:arcColor="#EEEEEE"
        app:bigSliceCount="4"
        app:headerRadius="40dp"
        app:headerTitle="液位"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxValue="4"
        app:measureTextSize="12sp"
        app:minValue="0"
        app:radius="80dp"
        app:realTimeTextSize="23sp"
        app:realTimeValue="3"
        app:startAngle="210"
        app:stripeWidth="30dp"
        app:sweepAngle="120" />

    <Button
        android:id="@+id/buttonParameter"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/button_corner"
        android:text="参数设置"
        android:textColor="#ffffff"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_corner"
        android:text="启动"
        android:textColor="#ffffff"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--    <ImageButton-->
    <!--        android:id="@+id/startImageButton"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="#00000000"-->
    <!--        app:srcCompat="@mipmap/start_green_128px_"-->
    <!--        tools:layout_editor_absoluteX="110dp"-->
    <!--        tools:layout_editor_absoluteY="528dp" />-->

    <!--    <ImageButton-->
    <!--        android:id="@+id/stopImageButton"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="#00000000"-->
    <!--        app:srcCompat="@mipmap/stop_red_128px_"-->
    <!--        tools:layout_editor_absoluteX="303dp"-->
    <!--        tools:layout_editor_absoluteY="528dp" />-->

    <com.example.atomizer2_0.CircularProgressView
        android:id="@+id/circularProgressView"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="80dp"
        app:backColor="#013E5A"
        app:backWidth="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progColor="@color/colorPrimary"
        app:progWidth="20dp"
        app:progress="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="153dp"
        android:layout_marginRight="153dp"
        android:layout_marginBottom="48dp"
        android:text="湿度"
        android:textColor="#EEEEEE"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_view_hum" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="171dp"
        android:layout_marginRight="171dp"
        android:layout_marginBottom="48dp"
        android:text="温度"
        android:textColor="#EEEEEE"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_view_temp" />

    <TextView
        android:id="@+id/countTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="203dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="140dp"
        android:text=" 0 \nsec"
        android:textColor="#ffffff"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/homeButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_corner"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/home_128px"
            app:tint="#ffffff">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="广谱消毒"
            android:textColor="#ffffff"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="460dp"
        android:layout_height="199dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_line_while"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手术室1"
                android:textColor="#EEEEEE"
                android:textSize="23dp"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/principalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="负责人："
                    android:textColor="#EEEEEE"
                    android:textSize="21dp" />

                <EditText
                    android:id="@+id/principalEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:textColor="#EEEEEE">

                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="空间设置:"
                android:textColor="#EEEEEE"
                android:textSize="21dp"
                android:typeface="normal" />


            <EditText
                android:id="@+id/roomArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:textColor="#EEEEEE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="min"
                android:textColor="#EEEEEE">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="时间设置:"
                android:textColor="#EEEEEE"
                android:textSize="21dp"
                android:typeface="normal" />


            <EditText
                android:id="@+id/roomTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:textColor="#EEEEEE" />

            <TextView
                android:id="@+id/textRoomTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="min"
                android:textColor="#EEEEEE">

            </TextView>
        </LinearLayout>


    </LinearLayout>

    <com.example.atomizer2_0.DashboardView
        android:id="@+id/dashboard_view_hum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        app:bigSliceCount="10"
        app:headerRadius="50dp"
        app:headerTitle="％"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:maxValue="100"
        app:arcColor="#FFFF44"
        app:measureTextSize="12sp"
        app:realTimeTextSize="23sp"
        app:radius="110dp"
        app:realTimeValue="60"
        app:startAngle="210"
        app:stripeWidth="30dp"
        app:sweepAngle="120" />

    <com.example.atomizer2_0.DashboardView
        android:id="@+id/dashboard_view_temp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:bigSliceCount="8"
        app:headerRadius="50dp"
        app:headerTitle="℃"
        app:layout_constraintEnd_toStartOf="@+id/dashboard_view_hum"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:maxValue="120"
        app:measureTextSize="12sp"
        app:realTimeTextSize="23sp"
        app:minValue="-50"
        app:arcColor="#FF0033"
        app:radius="110dp"
        app:realTimeValue="26"
        app:startAngle="210"
        app:stripeWidth="30dp"
        app:sweepAngle="120" />

</androidx.constraintlayout.widget.ConstraintLayout>